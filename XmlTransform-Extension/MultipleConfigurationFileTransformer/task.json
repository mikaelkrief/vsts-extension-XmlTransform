{
  "id": "c7237c10-23f5-11e6-8551-db7351d42238",
  "name": "Multiple Configuration File Transformer",
  "friendlyName": "Tranform configuration files",
  "description": "Transform multiple configuration files include in web/app.config",
  "author": "Mikael Krief",
  "helpMarkDown": "v 0.1.33 [More Information](https://github.com/mikaelkrief/vsts-extension-XmlTransform)",
  "category": "Utility",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [
    "visualstudio"
  ],
  "version": {
    "Major": "0",
    "Minor": "1",
    "Patch": "33"
  },
  "minimumAgentVersion": "1.95.0",
  "instanceNameFormat": "Multiple Config File Transform $(message)",
  "inputs": [
    {
      "name": "webConfigRelativePath",
      "type": "filePath",
      "label": "Web/App config file path",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Web or App.config file path"
    },
    {
      "name": "outPutRelativePath",
      "type": "string",
      "label": "Transformed Output Path",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Relative Output Path for transformed configuration(s) file(s) Example : $(build.BinariesDirectory)\\MyApp\\Configuration\\"
    },
    {
      "name": "vsVersion",
      "type": "pickList",
      "label": "Visual Studio Version",
      "required": false,
      "helpMarkDown": "Visual Studio Version.",
      "defaultValue": "14.0",
      "options": {
        "14.0": "Visual Studio 2015",
        "12.0": "Visual Studio 2013",
        "11.0": "Visual Studio 2012"
      }
    },
    {
      "name": "cleanOutput",
      "type": "boolean",
      "label": "Clean output",
      "required": true,
      "defaultValue": "false",
      "helpMarkDown": "Delete xdt files in ouput directory like appSettings.release.config"
    }
  ],
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\\transformConfig.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)",
      "platforms": [
        "windows"
      ]
    }
  }
}