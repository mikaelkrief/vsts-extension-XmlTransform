{
  "id": "c7237c10-23f5-11e6-8551-db7351d42238",
  "name": "MultipleConfigurationFileTransformer",
  "friendlyName": "Tranform multiple configuration files",
  "description": "Transform multiple configuration files listed in web/app.config",
  "author": "Mikael Krief",
  "helpMarkDown": "version 0.1.0",
  "category": "Utility",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": "0",
    "Minor": "1",
    "Patch": "0"
  },
  "minimumAgentVersion": "1.95.0",
  "instanceNameFormat": "MultipleConfigFileTransform $(message)",
  
  "groups":[
    {
    "name":"PathOption",   
    "displayName" :"Paths",
    "isExpanded" : "true"    
    }
  ],
  "inputs": [
    {
      "name": "webConfigRelativePath",
      "type": "filePath",
      "label": "Web or App config file path",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Web/App.config file path"
    },
    {
      "name": "outPutRelativePath",
      "type": "string",
      "label": "Output Path for transformed configuration(s) file(s)",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Relative Output Path for transformed configuration(s) file(s) Example : $(build.BinariesDirectory)\\MyApp\\Configuration\\"

    },
    {
            "name": "vsVersion",
            "type": "pickList",
            "label": "Visual Studio Version",
            "required": false,
            "helpMarkDown": "Visual Studio Version.",
            "defaultValue": "14.0",
            "options": {
                "14.0": "Visual Studio 2015",
                "12.0": "Visual Studio 2013",
                "11.0": "Visual Studio 2012"
            }
        }
  ],
  "execution": {
    "PowerShell": {
      "target": "$(currentDirectory)\\transformConfig.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)",
      "platforms": [
           "windows"
            ]

    }
  }
}